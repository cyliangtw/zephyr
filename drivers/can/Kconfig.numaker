DT_COMPAT_NUMAKER := nuvoton,numaker-canfd

config CAN_NUMAKER
	bool "Nuvoton NuMaker CAN-FD driver"
	depends on SOC_FAMILY_NUMAKER
	select HAS_NUMAKER_CANFD
	select CAN_MCAN
	default $(dt_compat_enabled,$(DT_COMPAT_NUMAKER))
	help
	  Enables Nuvoton NuMaker CAN-FD driver, using Bosch M_CAN as backend
